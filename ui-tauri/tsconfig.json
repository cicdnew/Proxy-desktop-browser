{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": ["svelte", "bun-types"],
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"]
    },
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "ui-tauri/src-tauri", "dist"]
}
